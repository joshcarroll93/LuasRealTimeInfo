<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:padding="20dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:id="@+id/text_view_stop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"/>

    <View
        app:layout_constraintTop_toBottomOf="@+id/text_view_stop_name"
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>
    <View
        app:layout_constraintTop_toBottomOf="@id/top_view"
        android:id="@+id/luas_stop_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <View android:id="@+id/bottom_view"
        app:layout_constraintTop_toBottomOf="@id/luas_stop_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>
</android.support.constraint.ConstraintLayout>